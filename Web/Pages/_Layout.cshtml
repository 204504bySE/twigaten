@using Microsoft.AspNetCore.Http;
@using Twigaten.Web.Locale;
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@('@')204504bySE" />
    <meta property="og:title" content="@ViewData["Title"] - TwiGaTen" />
    @RenderSection("TwitterCard", false)
    @RenderSection("MetaTags", false)
    <link rel="stylesheet" href="/css/bulmaswatch.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <title>@ViewData["Title"] - TwiGaTen</title>
</head>
<body>
    <nav class="navbar" role="navigation">
        <div class="navbar-brand has-dropdown">
            <a href="/" class="navbar-item">TwiGaTen</a>
            @if (true)/*(Context.Session.GetString("ScreenName") != null)*/
            {
                <a class="navbar-link is-hoverable">@("@" + Context.Session.GetString("ScreenName"))"</a>
                <div class="navbar-dropdown is-boxed">
                    <a href="/users" class="navbar-item">@Locale.Menu_MyTweet</a>
                    <a href="/timeline" class="navbar-item">@Locale.Menu_Timeline</a>
                    <hr class="navbar-divider">
                    <a href="/auth/logout" class="navbar-item">@Locale.Menu_Logout</a>
                </div>
            }
            else
            {
                <a href="/auth/login" rel="nofollow" class="navbar-item">@Locale.Menu_Login</a>
            }
        </div>
        <div class="navbar-menu">
            <a href="/featured" class="navbar-item">@Locale.Menu_Featured</a>
            <a href="/about" class="navbar-item">@Locale.Menu_About</a>
        </div>

        <div class="field">
            <div class="select">
                <select>
                    <option disabled selected style="display:none;">Language</option>
                    <option value="ja">日本語</option>
                    <option value="en">English</option>
                </select>
            </div>
        </div>
        <form>
            <div class="field has-addons">
                <input placeholder="@('@')name/URL" class="input" />
                <button type="submit" class="button"><svg class="twigaten-glyph"><use xlink:href="/img/fontawesome.svg#search" /></svg></button>
            </div>
        </form>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-muted"><a class="text-muted" href="/">twigaten.204504byse.info</a> by つ(*ﾟーﾟ) ◆204504bySE</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
</body>
</html>
