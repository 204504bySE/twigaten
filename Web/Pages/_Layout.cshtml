@using Microsoft.AspNetCore.Http;
@using Twigaten.Web.Locale;
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="/css/site.css" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@('@')204504bySE" />
    <meta name="twitter:title" content="@ViewData["Title"] - TwiGaTen" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <environment include="Development">
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="/lib/bootstrap-vue/dist/bootstrap-vue.css" />
    </environment>
    <environment exclude="Development">
        <link type="text/css" rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link type="text/css" rel="stylesheet" href="/lib/bootstrap-vue/dist/bootstrap-vue.min.css" />
    </environment>
    <title>@ViewData["Title"] - TwiGaTen</title>
    @RenderSection("TwitterCard", false)
    @RenderSection("MetaTags", false)
</head>
<body>
    <div id="app">
        <b-navbar type="light" variant="light" role="navigation">
            <b-navbar-brand href="/"><a href="/">TwiGaTen</a></b-navbar-brand>
            <b-navbar-nav>
                @if (true)/*(Context.Session.GetString("ScreenName") != null)*/
                {
                <b-nav-item-dropdown text="@("@" + Context.Session.GetString("ScreenName"))">
                    <b-dropdown-item href="/users"><a href="/users">@Locale.Menu_MyTweet</a></b-dropdown-item>
                    <b-dropdown-item href="/timeline"><a href="/timeline">@Locale.Menu_Timeline</a></b-dropdown-item>
                    <b-dropdown-divider></b-dropdown-divider>
                    <b-dropdown-item href="/auth/logout"><a href="/auth/logout">@Locale.Menu_Logout</a></b-dropdown-item>
                </b-nav-item-dropdown>
                }
                else
                {
                <b-nav-item><a href="/auth/login" rel="nofollow">@Locale.Menu_Login</a></b-nav-item>
                }
            </b-navbar-nav>
            <b-collapse id="bs-example-navbar-collapse-1">
                <b-navbar-nav>
                    <b-nav-item href="/featured">@Locale.Menu_Featured</b-nav-item>
                    <b-nav-item href="/about">@Locale.Menu_About</b-nav-item>
                </b-navbar-nav>
            </b-collapse>
            <navbar-nav>
                <b-nav-form>
                    <b-form-select>
                        <!--
                        <option disabled selected style="display:none;">Language</option>
                        <option value="ja">日本語</option>
                        <option value="en">English</option>
                         -->
                    </b-form-select>
                </b-nav-form>
                <b-nav-form>
                    <b-input-group>
                        <b-form-input placeholder="@('@')name/URL"></b-form-input>
                        <b-button variant="outline-primary" type="submit">🔍</b-button>
                    </b-input-group>
                </b-nav-form>
            </navbar-nav>
        </b-navbar>

        <div class="container-fluid body-content">
            @RenderBody()
            <hr />
            <footer>
                <p class="text-muted"><a class="text-muted" href="/">twigaten.204504byse.info</a> by つ(*ﾟーﾟ) ◆204504bySE</p>
            </footer>
        </div>
    </div>
    <environment include="Development">
        <script src="/lib/vue/vue.js"></script>
        <script src="/lib/bootstrap-vue/dist/bootstrap-vue.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="/lib/vue/vue.min.js"></script>
        <script src="/lib/bootstrap-vue/dist/bootstrap-vue.min.js"></script>
    </environment>
    @RenderSection("scripts", required: true)
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
</body>
</html>
